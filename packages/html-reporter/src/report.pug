- const passingRun = results.map(([_, result]) => result).every(({ state }) => state === "PASS");

doctype html

html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    title Test Report

    style
        include report.css

  body
    h1 Test Report

    h2 Run

    table 
      tbody
        tr 
          th Date 
          td=new Date().toLocaleString()
        tr 
          th Result 
          td=cpassingRun ? "PASS" : "FAIL"

    h2 Config 

    table 
      tbody
        tr 
          th Locator 
          td=config.locator.constructor.name
        tr 
          th Parser 
          td=config.parser.constructor.name
        tr 
          th Runner 
          td=config.runner.constructor.name
        tr
          th Reporters 
          td=config.reporters.map(x => x.constructor.name).join(", ")

    h2 Results

    table 
      thead 
        tr 
          th Path 
          th Name 
          th Result
          th Message?
          th Time (ms)
      tbody
        each result in results
          tr
            td=result[0].testFilePath
            td=result[0].testName
            td=result[1].state
            td=result[1].message
            td=result[1].time.toFixed(2)
