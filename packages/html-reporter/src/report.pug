doctype html

html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    title Test Report
    
    style
        include report.css

  body
    h1 Test Report

    p=new Date().toLocaleString()

    table 
      thead 
        tr 
          th Path 
          th Name 
          th Result
          th Message?
          th Time (ms)
      tbody
        each result in results
          tr
            td=result[0].testFilePath
            td=result[0].testName
            td=result[1].state
            td=result[1].message
            td=result[1].time.toFixed(2)
