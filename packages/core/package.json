{
  "version": "0.1.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --entry src/index.ts",
    "test": "tsdx test --no-cache --coverage",
    "lint": "tsdx lint",
    "prepare": "tsdx build"
  },
  "peerDependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "@testingrequired/bespin-core",
  "author": "Kylee Tilley",
  "module": "dist/bespin.esm.js",
  "devDependencies": {
    "@types/jest-when": "^2.7.2",
    "husky": "^4.2.5",
    "jest-when": "^3.1.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.1",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "glob": "^7.1.6"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/index.ts",
      "src/Reporter.ts",
      "src/Runner.ts",
      "src/TestFileLocator.ts",
      "src/TestFileParser.ts",
      "src/TestInTestFile.ts",
      "src/TestResult.ts",
      "src/DebugReporter.ts"
    ]
  }
}
