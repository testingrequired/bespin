{
  "include": ["src", "types"],
  "exclude": [
    "src/*.test.ts",
    "src/**/__mocks__"
  ],
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "lib": ["esnext"],
    "outDir": "dist/esm",
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true
  }
}
